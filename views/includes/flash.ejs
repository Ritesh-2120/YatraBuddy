<% if(success && success.length){ %>
<div class="alert alert-success alert-dismissible fade show mx-auto mt-2" style="max-width: 90%;">
    <strong>Success:</strong> <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>  

<% if(error && error.length){ %>
<div class="alert alert-danger alert-dismissible fade show mx-auto mt-2" style="max-width: 90%;">
    <strong>Error:</strong> <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %> 
